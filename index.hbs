{{!< default}}

<main id="content" class="content animated animated-mid fadeInUp" role="main">
  <section class="blog" name="blog" id="blog">
    <div class="visible-posts">
      {{#foreach posts}}
        <div class="card-post animated fadeInUp">
          {{#author}}<img class="post-author-avatar"src="{{image}}">{{/author}}
          <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
          <p class="post-excerpt">{{excerpt words="36"}}...</p>
        </div>
      {{/foreach}}
    </div>
  </section>

<script type="text/javascript">
  if (typeof analytics !== "undefined") {
    analytics.page("Writing Index");
  }
</script>
