{{#foreach posts}}
  <article class="{{ post_class }}">
    <header class="post-header">
      <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>

    <section class="post-content">
      {{content}}
    </section>

    <footer class="post-meta">
      <time class="post-date" datetime="{{date format='MM-YYYY-DD'}}">
        {{date format="MMMM Do, YYYY \at h:mma"}}
      </time> 
    </footer>

  </article>
{{/foreach}}

{{pagination}}
